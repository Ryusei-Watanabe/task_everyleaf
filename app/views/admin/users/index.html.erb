<h1><%= t('view.UserIndex') %></h1>
<div class = 'btn-wrapper'>
	<%= link_to t('view.New'), new_admin_user_path, class: 'btn btn-default' %>
</div>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>管理者権限</th>
				<th>順位</th>
				<th>名前</th>
				<th>タスク数</th>
			</tr>
		</thead>
		<tbody>
      <% @user.each do |user| %>
        <tr>
						<% unless user.admin? %>
						<th></th>
						<% else %>
						<th>★</th>
						<% end %>
  				<th><%= user.id %></th>
  				<td><%= user.name %></td>
					<td><%= user.tasks.count %></td>
          <td><%= link_to t('view.Show'), admin_user_path(user) %></td>
          <td><%= link_to t('view.Edit'), edit_admin_user_path(user) %></td>
          <td><%= link_to t('view.Destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
		</tbody>
	</table>
	<div class = "pagination_wrapper">
		<%= paginate @user %>
	</div>
</div>
