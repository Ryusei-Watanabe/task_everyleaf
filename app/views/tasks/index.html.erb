<div class="wrapper">
  <p id="notice"><%= notice %></p>
  <h1><%= t('view.TaskList') %></h1>
  <div class="search_form" >
    <%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |form| %>
      <div>
        <%= form.label(:title, 'タイトル') %>
        <%= form.text_field :title, value: @search_params %>
        <%= form.submit('search') %>
      </div>
  </div>
  <%= link_to "作成順でソートする", tasks_path(sort_expired: false) %>
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: true) %>
  <br>
<% end %>


  <% @task.each do |task| %>
    <div class="article_wrapper">
      <%= link_to task do %>
        <div class="article">
          <div class="title_wrapper">Title: <%= task.title %></div>
          <div>deadline: <%= task.deadline %></div>
          <div><%= task.created_at %></div>
        </div>
      <% end %>
    </div>
  <% end %>
  <br>
  <%= link_to t('view.NewTask'), new_task_path, class:"task-btn" %>
</div>
